@model List<Blog>
  <!-- Blog Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center mb-5 wow fadeInUp" data-wow-delay=".3s">
            <h5 class="mb-2 px-3 py-1 text-dark rounded-pill d-inline-block border border-2 border-primary">Our Blog</h5>
            <h1 class="display-5">Latest Blog & News</h1>
        </div>
        <div class="owl-carousel blog-carousel wow fadeInUp" data-wow-delay=".5s">

            @foreach (var item in Model)
                {

            <div class="blog-item">
                <img src="~/img/@item.ImageUrl" class="img-fluid w-100 rounded-top" alt="">
                <div class="rounded-bottom bg-light">
                    <div class="d-flex justify-content-between p-4 pb-2">
                        <span class="pe-2 text-dark"><i class="fa fa-user me-2"></i>By @item.Author.Name @item.Author.Surname</span>
                        <span class="text-dark"><i class="fas fa-calendar-alt me-2"></i>@item.CreateTime.ToString().Substring(10)</span>
                    </div>
                    <div class="px-4 pb-0">
                        <h4>@item.Name</h4>
                        <p>@item.Description</p>
                        <p>
                            @foreach (var i in item.BlogTags)
                                {
                                  <span>Tags:</span>  @i.Tag.Name <span> </span>

                                }
                        </p>
                    </div>
                    <div class="p-4 py-2 d-flex justify-content-between bg-primary rounded-bottom blog-btn">
                        <a href="#" type="button" class="btn btn-primary border-0">Learn More</a>
                        <a href="#" class="my-auto btn-primary border-0"><i class="fa fa-comments me-2"></i>@item.CommentCount Comments</a>
                    </div>
                </div>
            </div>
                }
        </div>
    </div>
</div>
<!-- Blog End -->